# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=lms_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# App
PORT=3000
NODE_ENV=development

# File Upload
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760

# Cors
CORS_ORIGIN=http://localhost:3001

# âœ¨ NEW: Video-based Attendance Configuration
# Percentage of video that must be watched to trigger attendance (default: 80%)
VIDEO_COMPLETION_THRESHOLD=80

# Time window in hours for auto-attendance submission (default: 24 hours)
ATTENDANCE_TIME_WINDOW=24

# Enable/disable automatic attendance submission (default: true)
ATTENDANCE_AUTO_SUBMIT=true

# Minimum interval between progress updates in seconds (default: 5)
VIDEO_PROGRESS_UPDATE_INTERVAL=5

# Maximum watch sessions to store per video for analytics (default: 100)
MAX_WATCH_SESSIONS=100

# Enable detailed video analytics logging (default: false)
VIDEO_ANALYTICS_LOGGING=false
